-- USERS --
CREATE TABLE `flabbergasted`.`users` ( `user_id` INT NOT NULL AUTO_INCREMENT , `user_name` VARCHAR(256) NOT NULL , `user_password` VARCHAR(256) NOT NULL , PRIMARY KEY (`user_id`)) ENGINE = MyISAM;


-- NOTES --
CREATE TABLE `flabbergasted`.`notes` ( `note_id` INT NOT NULL AUTO_INCREMENT , `note_name` TEXT NOT NULL , `note_text` TEXT NOT NULL , PRIMARY KEY (`note_id`)) ENGINE = MyISAM;


-- UPGRADES --
CREATE TABLE `flabbergasted`.`upgrades` (`upgrades_id` INT NOT NULL AUTO_INCREMENT , `upgrades_name` TEXT NOT NULL , `upgrades_text` TEXT NOT NULL , PRIMARY KEY (`upgrades_id`)) ENGINE = MyISAM;


-- TRAITS --
CREATE TABLE `flabbergasted`.`traits` ( `trait_id` INT NOT NULL AUTO_INCREMENT , `trait_name` TEXT NOT NULL , `trait_text` TEXT NOT NULL , PRIMARY KEY (`trait_id`)) ENGINE = MyISAM;


-- CUES --
CREATE TABLE `flabbergasted`.`cues` ( `cue_id` INT NOT NULL AUTO_INCREMENT , `cue_name` TEXT NOT NULL , `cue_text` TEXT NOT NULL , `archetype_id` INT NOT NULL , PRIMARY KEY (`cue_id`)) ENGINE = MyISAM;
- potřebuje být opraven spolu s foreign key

-- ARCHETYPES --
CREATE TABLE `flabbergasted`.`archetypes` ( `archetype_id` INT NOT NULL AUTO_INCREMENT , `archetype_name` TEXT NOT NULL , `archetype_text` TEXT NOT NULL , PRIMARY KEY (`archetype_id`)) ENGINE = MyISAM;


-- PROTAGONISTS --
CREATE TABLE `flabbergasted`.`protagonists` (`protagonist_id` INT NOT NULL AUTO_INCREMENT , `protagonist_name` VARCHAR NOT NULL , `archetype_id` INT NOT NULL COMMENT 'what class they are' , `protagonist_info` TEXT NOT NULL COMMENT 'age, profession, title, relationship, nickname' , `protagonist_description` TEXT NOT NULL , `protagonist_mementos` TEXT NOT NULL , `protagonist_flaw` TEXT NOT NULL COMMENT 'Either pick from possibles during making process or their own' , `protagonist_dilemma` TEXT NOT NULL , `protagonist_background` TEXT NOT NULL , `protagonist_readies` INT NOT NULL , `protagonist_standing` INT NOT NULL , `protagonist_status` VARCHAR NOT NULL , PRIMARY KEY (`protagonist_id`)) ENGINE = InnoDB;

-- GROUPS --
CREATE TABLE `flabbergasted`.`groups` (`group_id` INT NOT NULL AUTO_INCREMENT , `group_name` VARCHAR(64) NOT NULL , `group_info` TEXT NOT NULL COMMENT 'lokace, popis, slogan, téma, prezident atd.' , `group_description` TEXT NOT NULL , `group_trouble` TEXT NOT NULL , `group_renown` INT NOT NULL , `group_readies` INT NOT NULL , `group_trophies` INT NOT NULL , `group_den` TEXT NOT NULL , `group_updates` INT NOT NULL COMMENT 'opt in/out' , PRIMARY KEY (`group_id`)) ENGINE = InnoDB;
